<?xml version="1.0" encoding="UTF-8"?>
<phpunit
     colors="true"
     processIsolation="false"
     stopOnError="false"
     stopOnFailure="false"
     stopOnIncomplete="false"
     stopOnSkipped="false"
     bootstrap="vendor/autoload.php"
>
