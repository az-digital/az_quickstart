{#
/**
 * @file
 * Two column template for the checkout form.
 *
 * Available variables:
 * - form: The form.
 *
 * @ingroup themeable
 */
#}
<div class="layout-checkout-form">
  <div class="row">
    <div class="col-sm-6">
      {{ form|without('sidebar', 'actions') }}
    </div>
    <div class="col-sm-6">
      <h3>{% trans %} Order Summary {% endtrans %}</h3>
      {{ form.sidebar }}
    </div>
  </div>
  <div class="layout-region-checkout-footer">
    {{ form.actions }}
  </div>
</div>
