{#
/**
 * @file
 * Theme override for the mobile nav 'input' form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{% if attributes.hasClass('az-mobile-nav-previous') %}
  <button{{ attributes.removeClass('btn').removeClass('button').removeClass('btn-primary') }}><span class="material-icons-sharp text-azurite align-top">chevron_left</span>{{ attributes.value }}</button>
{% else %}
  <button{{ attributes.removeClass('btn-primary') }}><span class="material-icons-sharp text-azurite align-middle">chevron_right</span></button>{{ children }}
{% endif %}
