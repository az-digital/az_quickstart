<?php

/**
 * @file
 * Contains az_accordion.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function az_accordion_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the az_accordion module.
    case 'help.page.az_accordion':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Custom field plugins and theme template for accordion.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function az_accordion_theme($existing, $type, $theme, $path) {
  return [
    'az_accordion' => [
      'variables' => [
        'attributes' => [],
        'title' => NULL,
        'body' => NULL,
        'accordion_item_id' => NULL,
        'accordion_container_id' => NULL,
        'collapsed' => TRUE,
        'aria_expanded' => 'false',
      ],
      'template' => 'az-accordion',
    ],
  ];
}

/**
 * Implements hook_preprocess_HOOK().
 */
function az_accordion_preprocess_field(&$variables) : void {
  $element = $variables['element'];
  if ($element['#field_type'] === 'az_accordion') {
    $variables['attributes']['class'][] = 'accordion';

    // Use the accordion container ID that was calculated in the formatter.
    if (!empty($element['#accordion_container_id'])) {
      $variables['attributes']['id'] = $element['#accordion_container_id'];
    }

    // Also add accordion-item class to each field item.
    foreach ($variables['items'] as $delta => $item) {
      $variables['items'][$delta]['attributes']->addClass('accordion-item');
    }
  }
}
