{#
/**
 * @file
 * Theme implementation to display an AZ Accordion.
 *
 * Available variables:
 * - attributes: accordion element attributes.
 * - title: The title field of a accordion..
 * - body: The body field of a accordion.
 * - collapsed: The collapsed field of an accordion.
 * - accordion_item_id: Unique ID for an accordion item.
 * - aria_expanded: Aria field equal to the collapsed value.
 *
 * @ingroup themeable
 */
#}

{% set attributes = attributes.addClass('h-100') %}

<div {{ attributes }}>
  <div class="card">
    <div class="card-header">
      <h3 class="my-0">
        <button class="btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#{{ accordion_item_id }}" aria-expanded="{{ aria_expanded }}" aria-controls="{{ accordion_item_id }}">
          {% if title %}
            {{ title }}
          {% endif %}
        </button>
      </h3>
    </div>
    <div id="{{ accordion_item_id }}" class="{{ collapsed }}" aria-labelledby="{{ accordion_item_id }}" data-bs-parent="#{{ accordion_item_id }}">
      <div class="card-body text-bg-white">
        {% if body %}
        <div class="accordion-text">{{ body }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
