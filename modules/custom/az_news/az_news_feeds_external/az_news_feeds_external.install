<?php

/**
 * @file
 * Contains az_news_feeds_external.install.
 */

use Drupal\migrate\MigrateExecutable;
use Drupal\migrate\MigrateMessage;

/**
 * Implements hook_uninstall().
 */
function az_news_feeds_external_uninstall() {
  $tag = 'AZ Quickstart External News Feeds';

  // Rollback the migrations that are tagged as external news feed content.
  $migrations = \Drupal::service('plugin.manager.migration')->createInstancesByTag($tag);
  foreach ($migrations as $migration) {
    $executable = new MigrateExecutable($migration, new MigrateMessage());
    $executable->rollback();
  }
}
